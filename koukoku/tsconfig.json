{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022", "dom", "dom.iterable"],
		"module": "esnext",
		"allowJs": true,
		"strict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@uragawa/*": ["../uragawa/src/*"]
		},
		"declaration": true,
		"emitDeclarationOnly": true
	}
}
